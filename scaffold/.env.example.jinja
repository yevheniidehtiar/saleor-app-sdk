# {{ app_display_name }} Configuration

# App Configuration
APP_NAME={{ app_name }}
APP_VERSION={{ app_version }}
SECRET_KEY=your-secret-key-here-change-in-production

# Saleor Configuration
SALEOR_API_URL=https://your-saleor-instance.com/graphql/
APP_URL={{ app_url }}

# Development Configuration
DEBUG=true
LOG_LEVEL=INFO

{% if include_docker %}
# Docker Configuration
NGROK_DOMAIN=
NGROK_AUTHTOKEN=your-ngrok-auth-token
{% endif %}

# Database Configuration (if needed)
# DATABASE_URL=postgresql://user:password@localhost:5432/{{ app_name | replace('-', '_') }}

# Redis Configuration (if needed)
# REDIS_URL=redis://localhost:6379/0

# External Services (add as needed)
# WEBHOOK_SECRET=your-webhook-secret
# API_TIMEOUT=30